extends layout.pug

block content

  main
    section.search-page
      .search-page__wrapper
        h1 Поиск
        .search.search-page__form
          form(action='/search' method='get')
            label
              input(type='text' name='query' placeholder='Что ищем?' value=query )
            button.search__button.button.button--transparent(type='submit') Найти
          .search__result #{results.length === 0 && query !== '' ? 'Ничего не найдено.' : ''}
        .search__result
          each article in results
            time.search__date(datetime=article.createdDate) #{article.createdDate}
            a.search__link(href=`/articles/${article.id}`) #{article.title}
